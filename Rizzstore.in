<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Gaming Website</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background: #0f172a;
      color: #e5e7eb;
    }
    header {
      background: #020617;
      padding: 20px;
      text-align: center;
      font-size: 28px;
      font-weight: bold;
      color: #38bdf8;
    }
    nav {
      display: flex;
      justify-content: center;
      gap: 20px;
      background: #020617;
      padding-bottom: 15px;
    }
    nav a {
      color: #e5e7eb;
      text-decoration: none;
      font-weight: bold;
    }
    nav a:hover {
      color: #38bdf8;
    }
    .container {
      padding: 30px;
      max-width: 1100px;
      margin: auto;
    }
    .games {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    .game-card {
      background: #020617;
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 0 15px rgba(56,189,248,0.15);
    }
    .game-card h3 {
      margin-top: 0;
      color: #38bdf8;
    }
    .game-card button {
      background: #38bdf8;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }
    .game-card button:hover {
      background: #0ea5e9;
    }
    footer {
      text-align: center;
      padding: 20px;
      background: #020617;
      color: #9ca3af;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <header>ðŸŽ® My Gaming Website</header>
  <nav>
    <a href="#">Home</a>
    <a href="#">Games</a>
    <a href="#">About</a>
    <a href="#">Contact</a>
  </nav>

  <div class="container">
    <h2>Featured Games</h2>
    <div class="games">
      <div class="game-card">
        <h3>Click Counter</h3>
        <p>Test how fast you can click!</p>
        <button onclick="startClickGame()">Play</button>
      </div>
      <div class="game-card">
        <h3>Coming Soon</h3>
        <p>More games will be added.</p>
        <button disabled>Locked</button>
      </div>
    </div>

    <div id="game-area" style="margin-top:40px; text-align:center;"></div>
  </div>

  <footer>Â© 2026 My Gaming Website</footer>

  <script>
    function startClickGame() {
      let clicks = 0;
      let timeLeft = 5;

      const gameArea = document.getElementById('game-area');
      gameArea.innerHTML = `
        <h2>Click as fast as you can!</h2>
        <h3 id="timer">Time: ${timeLeft}</h3>
        <h3 id="score">Score: 0</h3>
        <button id="clickBtn" style="padding:20px; font-size:20px;">CLICK ME</button>
      `;

      const scoreEl = document.getElementById('score');
      const timerEl = document.getElementById('timer');
      const btn = document.getElementById('clickBtn');

      btn.onclick = () => {
        clicks++;
        scoreEl.textContent = 'Score: ' + clicks;
      };

      const timer = setInterval(() => {
        timeLeft--;
        timerEl.textContent = 'Time: ' + timeLeft;
        if (timeLeft <= 0) {
          clearInterval(timer);
          btn.disabled = true;
          gameArea.innerHTML += `<h2>Game Over! Final Score: ${clicks}</h2>`;
        }
      }, 1000);
    }
  </script>
</body>
</html>
